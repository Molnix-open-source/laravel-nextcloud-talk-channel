{
    "name": "molnix/laravel-nextcloud-talk-channel",
    "description": "A Laravel notification channel for Nextcloud Talk",
    "homepage": "https://github.com/Molnix-open-source/laravel-nextcloud-talk-channel",
    "license": "MIT",
    "authors": [
        {
            "name": "Vishnu Koothattu",
            "email": "vishnu@koothattu.com",
            "homepage": "https://vishnu.koothattu.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^6.3 || ^7.0",
        "illuminate/notifications": "~10.0 || ~11.0 || ~12.0",
        "illuminate/support": "~10.0 || ~11.0 || ~12.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^10.6",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Molnix\\Channels\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Molnix\\Channels\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Molnix\\Channels\\NextcloudTalkServiceProvider"
            ]
        }
    }
}